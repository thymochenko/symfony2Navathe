{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Departamento list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Dnome</th>
                <th>Dnumero</th>
                <th>Datainiciogerente</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('departamento_show', { 'id': entity.id }) }}">{{ entity.dnome }}</a></td>
                <td>{{ entity.dnumero }}</td>
                <td>{% if entity.dataInicioGerente %}{{ entity.dataInicioGerente|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('departamento_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('departamento_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('departamento_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
